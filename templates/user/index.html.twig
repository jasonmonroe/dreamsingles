{% extends 'base.html.twig' %}

{% block title %}User Registration Ledger{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h2><i class="material-icons">person</i> User Ledger</h2>
        <hr>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th colspan="3">ACTION</th>
                    <th>ID</th>
                    <th>USERNAME</th>
                    <th>ROLES</th>
                    <th>PASSWORD</th>
                    <th>DATE</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    {% if app.user.id == user.id %}
                        <td>{{ include('user/_delete_form.html.twig') }}</td>
                        <td><a href="{{ path('user_edit', {'id': user.id}) }}"><i class="material-icons">edit</i></a></td>
                    {% else %}
                        <td><a href="#" title="You are not allowed to delete user: {{ user.username }}"><i class="material-icons">delete</i></a></td>
                        <td><a title="You are not allowed to edit user: {{ user.username }}"><i class="material-icons">edit</i></a></td>
                    {% endif %}

                    <td><a href="{{ path('user_show', {'id': user.id}) }}"><i class="material-icons">preview</i></a></td>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ '*****' }}</td>
                    <td>{{ user.created }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8"><p class="alert alert-warning"><i class="material-icons">info_outline</i> There are no registered users.</p></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <hr>
        <a class="pull-right btn btn-success btn-lg" href="{{ path('user_new') }}">add user</a>
    </div>
</div>






{% endblock %}

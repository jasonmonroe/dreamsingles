{% extends 'base.html.twig' %}

{% block title %}Post Profile: {{ post.id }}{% endblock %}

{% block body %}
    <h2>Post Profile</h2>
    <hr>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ post.userId }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.created }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body }}</td>
            </tr>


        </tbody>
    </table>

    <hr>
    <a class="pull-right btn btn-link" href="{{ path('post_index') }}"><< back to ledger</a>


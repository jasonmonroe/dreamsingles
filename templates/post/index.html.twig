{% extends 'base.html.twig' %}

{% block title %}Post Ledger{% endblock %}

{% block body %}
    {%  if app.user != null %}
        <h1>Post Ledger</h1>
        <hr>
        <p>DEBUG: User ID: {{ app.user.id }}</p>
        <table class="table">
            <thead>
                <tr>
                    <th>actions</th>
                    <th>ID</th>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Body <small>snippet</small></th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        {% if app.user.id == post.userId %}
                            <span>{{ include('post/_delete_form.html.twig') }}</span>
                            <a href="{{ path('post_edit', {'id': post.id}) }}">E</a>
                        {% else %}
                            <a title="You are not allowed to delete post: {{ post.id }}" class="btn">D</a>
                            <a title="You are not allowed to edit post: {{ post.id }}" class="btn">E</a>
                        {% endif %}
                        <a class="btn" href="{{ path('post_show', {'id': post.id}) }}">S</a>
                    </td>
                    <td>{{ post.id }}</td>
                    <td>{{ post.userId }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>{{ post.created }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5"><p class="alert alert-warning">There are no posts submitted.</p></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <hr>
        <a href="{{ path('post_new') }}">add post</a>
    {% endif %}

    {% if app.user == null %}
        <p class="alert alert-danger">This is a restricted page!  You must be logged in to view the ledger!</p>
    {% endif %}
{% endblock %}

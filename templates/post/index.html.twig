{% extends 'base.html.twig' %}

{% block title %}Post Ledger{% endblock %}

{% block body %}
    {%  if app.user != null %}
        <h1>Post Ledger</h1>
        <hr>
        <p>DEBUG: User ID: {{ app.user.id }}</p>
        <table class="table">
            <thead>
                <tr>
                    <th>actions</th>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>User_id</th>

                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                    </td>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>{{ post.userId }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('post_new') }}">add post</a>
    {% endif %}

    {% if app.user == null %}
        <p class="alert alert-danger">This is a restricted page.  You must be logged in to view this!</p>
    {% endif %}
{% endblock %}

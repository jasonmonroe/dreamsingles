{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form id="login-form" name="login-form" method="post">

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h2 class="h3 mb-3 font-weight-normal">Login</h2>

        {% if error %}
            <p class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        {% endif %}

        <label for="inputUsername">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" maxlength="16" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" maxlength="16" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button id="login-btn" name="login-btn" class="btn btn-lg btn-primary" type="submit" value="1">Login</button>
    </form>
    <a href="{{ path('user_new')  }}">Not registered?  Create an account.</a>
{% endblock %}
